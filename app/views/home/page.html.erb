    <h1>Shop Shoes Today!</h1>
        <div class="listings-flex">
            <% @listings.each do |listing| %>
            <div class="card-header">
                <%= image_tag(listing.images[0]) if listing.images.attached? %>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= listing.name %></h5>
                <h6 class="card-subtitle mb-2 text muted"> $ <%= listing.price %></h6>
                <%= link_to "Buy Now!", listing_path(id: listing.id), method: :get, class: "btn btn-lg btn-block btn-outline-primary"%>
                <%#= <button type="button  link_to "Buy Now!", listing.id, method: :get, class="btn btn-lg btn-block btn-outline-primary"</button>%> 
            </div>
            <% end %>
        </div>
