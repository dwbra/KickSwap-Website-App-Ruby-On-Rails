<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.description %></td>
        <td>$<%= listing.price %></td>
        <td><%= link_to 'Show Listing', listing %></td>
        <% if current_user.id == listing.user_id %>
        <td><%= link_to 'Edit Listing', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy Listing', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
